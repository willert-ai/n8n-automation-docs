{
  "manifest_version": 3,
  "name": "Capture URL â†’ n8n",
  "version": "0.1.0",
  "description": "One-click capture of the current tab to an n8n webhook; optional comment via native prompt.",
  "permissions": ["activeTab", "storage", "scripting", "contextMenus", "notifications", "geolocation"],
  "action": {
    "default_title": "Capture this page",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "options_page": "options.html",
  "commands": {
    "capture-current-tab": {
      "suggested_key": { "default": "Alt+Shift+S" },
      "description": "Capture current tab to n8n"
    }
  }
}